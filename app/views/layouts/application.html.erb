<!DOCTYPE html>
<html>
  <head>
    <title>Anime Books Online Store</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <script type="text/text/javascript">
      I18n.defaultLocale  = "<%= I18n.default_locale %>";
      I18n.locale         = "<%= I18n.locale %>";
    </script>

  </head>

  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= form_tag store_index_path, class: 'locale' do %>
            <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s),
                onchange: 'this.form.submit()' %>
            <%= submit_tag 'submit' %>
            <%= javascript_tag "$('.locale input').hide()" %>
      <% end %>
      <%= t('.title') %>
      <span class="title"> <%= @page_title %></span>
    </div>

    <div id="columns">
      <div id="side">
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %>
          <% end %>
          <% end %>
        </div>
        <ul>
          <li><a href="http://localhost:3000"><%= t('.home') %></a></li>
          <li><a href="http://localhost:3000/login"><%= t('.login') %></a></li>
          <li><a href="http://localhost:3000/users"><%= t('.users') %></a></li>
          <li><a href="http://localhost:3000/orders"><%= t('.orders') %></a></li>
          <li><a href="http://localhost:3000/products"><%= t('.products') %></a></li>
          <li><a href="http://www......./faq"><%= t('.questions') %></a></li>
        </ul>

        <% if session[:user_id] %>
          <ul>
            <li><%= link_to 'Orders', orders_path %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= link_to 'Products', products_path %></li>
          </ul>
          <%= button_to 'Logout', logout_path, method: :delete %>
        <% end %>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
